<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IceCreamShop.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/main_blue</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="cornerRadius">@dimen/radius_8</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
    </style>

    <style name="Theme.IceCreamShop.LoginTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_8</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/main_blue</item>
        <item name="boxStrokeErrorColor">@color/main_red</item>
        <item name="android:textColorHint">@color/main_blue</item>
        <item name="hintTextColor">@color/main_blue</item>
    </style>

    <style name="Theme.IceCreamShop.LoginHintText" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="textAllCaps">false</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">@color/main_blue</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="Theme.IceCreamShop.ToolbarBackButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_baseline_arrow_back</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetLeft">@dimen/inset_0</item>
        <item name="android:insetTop">@dimen/inset_0</item>
        <item name="android:insetRight">@dimen/inset_0</item>
        <item name="android:insetBottom">@dimen/inset_0</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="iconPadding">@dimen/padding_0</item>
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <style name="Theme.IceCreamShop.ToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="textAllCaps">false</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.IceCreamShop.CardViewBackground" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/radius_8</item>
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="cardElevation">@dimen/elevation_2</item>
    </style>

    <style name="Theme.IceCreamShop.CardViewText" parent="">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="textAllCaps">false</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_4</item>
    </style>

    <style name="Theme.IceCreamShop.MainText" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="textAllCaps">false</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_4</item>
    </style>

    <style name="Theme.IceCreamShop.CardViewFullColorBtn" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="textAllCaps">true</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/radius_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_4</item>
        <item name="android:layout_marginRight">@dimen/margin_4</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.IceCreamShop.SearchField">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="queryBackground">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

</resources>